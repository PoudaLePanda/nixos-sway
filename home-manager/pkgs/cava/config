## Configuration for CAVA

[general]
# Smoothing mode, can be 'normal', 'scientific' or 'waves'
mode = normal

# Framerate
framerate = 60

# Sensitivity
autosens = 1
sensitivity = 100

# Bars
bars = 0

# Frequency range
lower_cutoff_freq = 50
higher_cutoff_freq = 10000

[input]
# Audio capturing method
method = pulse

[output]
# Output method
method = ncurses

# Visual channels
channels = stereo

[color]
# Colors
background = black
foreground = cyan

[smoothing]
# Smoothing effect
integral = 77
monstercat = 0
waves = 0

[eq]
# Equalizer
1 = 1
2 = 1
